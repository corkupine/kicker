<% provide(:title, kicker_name + " | Bio") %>
<% @bios.each do |bio| %>
    <div class="row">
        <div class="large-8 medium-8 columns">
            <h1><%= bio.first_name %> <%= bio.last_name %> <small>Bio</small></h1>
        </div>
        <div class="large-2 medium-2 columns">
            <a href="mailto:<%= bio.email %>" class="button expand">Email <%= bio.first_name %></a>
        </div>
        <div class="large-2 medium-2 columns">
            <a href="tel:<%= bio.phone %>" class="button expand"><%= bio.phone %></a>
        </div>
    </div>
    <div class="row">
        <div class="large-5 columns">
            <img src="<%= bio.image_link %>" class="img-responsive">
        </div>
        <div class="large-7 columns">
            <h3 class="subheader"><%= bio.first_name %> <%= bio.last_name %> <small>Academic Info</small></h3>
            <table>
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Result</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>GPA</td>
                        <td><%= bio.GPA %></td>
                    </tr>
                    <tr>
                        <td>ACT</td>
                        <td><%= bio.ACT_score %></td>
                    </tr>
                    <tr>
                        <td>Graduation Year</td>
                        <td><%= bio.graduation_year %></td>
                    </tr>
                    <tr>
                        <td>SAT</td>
                        <td><%= bio.SAT_score %></td>
                    </tr>
                    <tr>
                        <td>College Credits</td>
                        <td><%= bio.college_credits_earned %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <div class="panel">
                <%= bio.bio_content %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <h2>Physical</h2>
        </div>
        <div class="large-12 columns">
            <ul class="large-block-grid-3 small-block-grid-1 medium-block-grid-3">
                <li class="text-center">
                    <div class="panel">
                        <h4>Height</h4>
                        <p><%= bio.height %>"</p>
                    </div>
                </li>
                <li class="text-center">
                    <div class="panel">
                        <h4>Weight</h4>
                        <p><%= bio.weight %>lbs.</p>
                    </div>
                </li>
                <li class="text-center">
                    <div class="panel">
                        <h4>40yd Dash</h4>
                        <p><%= bio.sprint_40_time %>secs</p>
                    </div>
                </li>
                <li class="text-center">
                    <div class="panel">
                        <h4>Vertical Jump</h4>
                        <p><%= bio.vertical_jump %>"</p>
                    </div>
                </li>
                <li class="text-center">
                    <div class="panel">
                        <h4>Bench Press</h4>
                        <p><%= bio.bench_press %>lbs.</p>
                    </div>
                </li>
                <li class="text-center">
                    <div class="panel">
                        <h4>Squat</h4>
                        <p><%= bio.squat %>lbs.</p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            <h2>School Info</h2>
            <div class="panel">
                <div class="fn"><%= bio.school_name %></div>
                <div class="street-address"><%= bio.school_street %></div>
                <div>
                    <span class="locality"><%= bio.school_city %></span>, <span class="state"><%= bio.school_state %></span>, <span class="zip"><%= bio.school_zip %></span>
                </div>
                <div>
                    <a href="<%= bio.school_url %>">Website</a>
                </div>
            </div>
        </div>
        <div class="large-8 columns">
            <h2>Coaches</h2>
            <div class="panel">
                <div class="row">
                    <div class="large-4 columns">
                        <h3>Head Coach:</h3> 
                         <%= bio.team_head_coach %>
                         <p><a href="tel:<%= bio.team_head_coach_phone %>"><%= bio.team_head_coach_phone %></a> | <a href="mailto:<%= bio.team_head_coach_email %>">Email</a></p>
                    </div>
                    <div class="large-4 columns">
                        <h3>Kicking Coach:</h3> <%= bio.primary_kicking_coach %>
                        <p><a href="tel:<%= bio.team_head_coach_phone %>"><%= bio.team_head_coach_phone %></a> | <a href="mailto:<%= bio.team_head_coach_email %>">Email</a></p>
                    </div>
                    <div class="large-4 columns">
                        <h3>Special Teams:</h3> <%= bio.team_special_teams_coach %>
                        <p><a href="tel:<%= bio.team_head_coach_phone %>"><%= bio.team_head_coach_phone %></a> | <a href="mailto:<%= bio.team_head_coach_email %>">Email</a></p>
                    </div>
                </div>

                
            </div>
        </div>
    </div>
    <% if user_signed_in? %>
        <div class="row">
            <div class="large-12 columns">
                <%= link_to 'Edit', edit_bio_path(bio), :class => "button"  %>
            </div>
        </div>
    <% end %>
<% end %>

