<div class="row">
  <div class="large-10 columns">
    <h1><%= @college_wish_list.college_name %> <small><%= @college_wish_list.mascot %></small></h1>
  </div>
  <div class="large-2 columns">
    <a href="<%= @college_wish_list.college_main_url %>" target="_blank" class="button expand">Website</a>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    
    <iframe src="https://www.google.com/maps/embed?pb=!1m5!3m3!1m2!1s0x89e653629c38db6d%3A0x929ea2da73fa2973!2s<%= @college_wish_list.college_street_address %>%2C+<%= @college_wish_list.college_city %>%2C+<%= @college_wish_list.college_state %>%2C+<%= @college_wish_list.college_zip %>!5e0!3m2!1sen!2sus!4v1387244587724" width="100%" height="200" frameborder="0" style="border:0"></iframe>
    <div data-alert class="alert-box text-center">
      <b>Major offered?</b> <%= @college_wish_list.major_offered  ? 'Yes' : 'No'  %>
    </div>





  </div>
  <div class="large-6 columns">
    <h3>Comments</h3>
    <%= @college_wish_list.comments %>
  </div>
  <div class="large-6 columns">
    <div class="panel">
      <h3>Coaching Staff</h3>
      <p><strong>Head Coach:</strong> <a href="mailto:<%= @college_wish_list.head_coach_email %>"><%= @college_wish_list.head_coach_name %></a></p>
      <p><strong>Special Teams Coach:</strong> <a href="mailto:<%= @college_wish_list.special_teams_coach_email %>"><%= @college_wish_list.special_teams_coach_name %></a></p>
      <div class="row">
        <div class="large-6 columns">
          <a href="<%= @college_wish_list.coaching_staff_url %>" target="_blank" class="button expand">Full Coaching Staff</a>
        </div>
        <div class="large-6 columns">
          <a href="<%= @college_wish_list.team_url %>" target="_blank" class="button expand">Team Site</a>
        </div>
      </div>
    </div>
  </div>
  <div class="large-12 columns">
    <%= link_to 'Edit', edit_college_wish_list_path(@college_wish_list), :class=> "button" %>
    <%= link_to 'Back', college_wish_lists_path, :class=> "button" %>
  </div>
</div>
