<% if user_signed_in? %>
<%= simple_form_for(@highlight) do |f| %>
  <% if @highlight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@highlight.errors.count, "error") %> prohibited this highlight from being saved:</h2>

      <ul>
      <% @highlight.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :date %>
  <%= f.input :title %>
  <%= f.input :opponent %>
  <%= f.input :link, label: "Link (Youtube Video ID)" %>
  <%= f.input :comments %>
  <%= f.submit 'Submit', :class => "button expand" %>
<% end %>
<% else %>
<p class="label alert">You must be logged in to add or edit Highlights.</p>
<% end %>
