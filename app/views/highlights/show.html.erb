<p id="notice"><%= notice %></p>

<p>
  <b>Date:</b>
  <%= @highlight.date %>
</p>

<p>
  <b>Title:</b>
  <%= @highlight.title %>
</p>

<p>
  <b>Opponent:</b>
  <%= @highlight.opponent %>
</p>



<div class="video-container clearfix">
	<iframe 
		id="ytplayer" 
		type="text/html" 
		width="853" 
		height="480" 
		src="https://www.youtube.com/embed/<%= @highlight.link %>?controls=0&rel=0&showinfo=0"
		frameborder="0"
	></iframe>
</div>

<p>
  <b>Comments:</b>
  <%= @highlight.comments %>
</p>


<%= link_to 'Edit', edit_highlight_path(@highlight), :class => "btn btn-default btn-sm"  %>
<%= link_to 'Back', highlights_path, :class => "btn btn-default btn-sm"  %>
