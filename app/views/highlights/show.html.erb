<p id="notice"><%= notice %></p>
<div class="row">
	<div class="large-12 columns">
		<h1><%= @highlight.title %></h1>
	</div>
</div>
<div class="row">
	<div class="large-12 columns">
			<div class="video-container">
				<iframe 
				id="ytplayer" 
				type="text/html" 
				width="1280" 
				height="720" 
				src="https://www.youtube.com/embed/<%= @highlight.link %>?controls=0&rel=0&showinfo=0"
				frameborder="0"
			></iframe>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="large-12 columns">
		<div class="panel">
			<p><strong><%= @highlight.comments %></strong><br><%= @highlight.date %> at <%= @highlight.opponent %></p>
		</div>
	</div>
</div>

<%= link_to 'Edit', edit_highlight_path(@highlight), :class => "btn btn-default btn-sm"  %>
<%= link_to 'Back', highlights_path, :class => "btn btn-default btn-sm"  %>
