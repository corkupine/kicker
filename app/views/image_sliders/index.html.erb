<div class="row">
  <div class="large-12 columns">
    <h1>Listing Image Sliders</h1>

    <table>
      <tr>
        <th>Image</th>
      </tr>

    <% @image_sliders.each do |image_slider| %>
      <tr>
        <td>
          <img src="<%= image_slider.image_link %>" class="img-responsive">
          <table class="text-center">
            <tr> 
              <th>Caption</th>
              <th>Alt tag</th>
              <% if user_signed_in? %>
              <th colspan="3">Actions</th>
              <% end %>
            </tr>
            <tr>
              <td><%= image_slider.caption %></td>
              <td><%= image_slider.alt_tag %></td>
              <% if user_signed_in? %>
              <td>
                <%= link_to 'Show', image_slider, :class => "button secondary tiny" %>
                
                
              </td>
              <td><%= link_to 'Edit', edit_image_slider_path(image_slider), :class => "button secondary tiny" %></td>
              <td><%= link_to 'Destroy', image_slider, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button secondary tiny" %></td>
              <% end %>
            </tr>
          </table>
        </td>
      </tr>
    <% end %>
    </table>
    <%= link_to 'New Image slider', new_image_slider_path, :class => "button secondary" %>
  </div>
</div>
