<% provide(:title, kicker_name + " | Kickoff Stats") %>
<div class="row">
  <div class="large-10 medium-10 columns">
    <h1>Kickoff <small>Stats</small></h1>
  </div>
  <div class="large-2 medium-2 columns">
    <% if user_signed_in? %>
      <%= link_to 'New Kickoff', new_kickoff_path, :class => "button expand" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="large-4 columns">
    <div class="panel">
      <strong>Kickoff Total Yards:</strong> <%= @total_yards %>
    </div>
  </div>
  <div class="large-4 columns">
    <div class="panel">
      <strong>Kickoff Long:</strong> <%= @kickoff_long %> yards
    </div>
  </div>
  <div class="large-4 columns">
    <div class="panel">
      <strong>Kickoff Average:</strong> <%= @kickoff_average%> yards
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <tr> 
          <th>Date</th>
          <th>Distance</th>
          <th>Hangtime</th>
          <% if user_signed_in? %>
            <th></th>
            <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @kickoffs.each do |kickoff| %>
          <tr>
            <td><%= l(kickoff.date)  %></td>
            <td><%= kickoff.distance %></td>
            <td><%= kickoff.hangtime %></td>
            <% if user_signed_in? %>
              <td><%= link_to 'Edit', edit_kickoff_path(kickoff), :class => "button secondary tiny"  %></td>
              <td><%= link_to 'Remove', kickoff, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button secondary tiny"  %></td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
    </table>
    <% if user_signed_in? %>
      <%= link_to 'New Kickoff', new_kickoff_path, :class => "button secondary" %>
    <% end %>
  </div>
</div>


