<% provide(:title, kicker_name + " | Punt Stats") %>
<div class="row">
  <div class="large-10 medium-10 columns">
    <h1>Punt <small>Stats</small></h1>
  </div>
  <div class="large-2 medium-2 columns">
    <% if user_signed_in? %>
      <%= link_to 'New Punt', new_punt_path, :class => "button expand" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <div class="panel">
      <strong>Punt Long:</strong> <%= @punt_long %> yards
    </div>
  </div>
  <div class="large-6 columns">
    <div class="panel">
      <strong>Punt Average:</strong> <%= @punt_average %> yards
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <table class="table table-striped table-responsivet table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Distance</th>
        <th>Hangtime</th>
        <% if user_signed_in? %>
          <th></th>
          <th></th>
        <% end %>
      </tr>
    </thead> 
    <tbody>
      <% @punts.each do |punt| %>
        <tr>
          <td><%= l(punt.date) %></td>
          <td><%= punt.distance %></td>
          <td><%= punt.hangtime %></td>
          <% if user_signed_in? %>
            <td><%= link_to 'Edit', edit_punt_path(punt), :class => "button secondary tiny"  %></td>
            <td><%= link_to 'Remove', punt, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button secondary tiny"  %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
</table>

<% if user_signed_in? %>
  <%= link_to 'New Punt', new_punt_path, :class => "button secondary" %>
<% end %>

  </div>
</div>