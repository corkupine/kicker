<div class="row">
  <div class="large-12 columns">
    <h1>Punt <small>Stats</small></h1>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <div class="panel">
      <strong>Punt Long:</strong> <%= @punt_long %> yards
    </div>
  </div>
  <div class="large-6 columns">
    <div class="panel">
      <strong>Punt Average:</strong> <%= @punt_average %> yards
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <table class="table table-striped table-responsivet table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Distance</th>
        <th>Hangtime</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead> 
    <tbody>
      <% @punts.each do |punt| %>
        <tr>
          <td><%= punt.date %></td>
          <td><%= punt.distance %></td>
          <td><%= punt.hangtime %></td>
          <td><%= link_to 'Show', punt, :class => "btn btn-default btn-sm"  %></td>
          <td><%= link_to 'Edit', edit_punt_path(punt), :class => "btn btn-default btn-sm"  %></td>
          <td><%= link_to 'Destroy', punt, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm"  %></td>
        </tr>
      <% end %>
    </tbody>
</table>


<%= link_to 'New Punt', new_punt_path, :class => "button secondary" %>

  </div>
</div>