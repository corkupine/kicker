<% if user_signed_in? %>
<%= simple_form_for(@reference) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :reference_name %>
    <%= f.input :reference_title %>
    <%= f.input :reference_email %>
    <%= f.input :reference_phone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=> "button expand" %>
  </div>
<% end %>
<% else %>
<p class="label alert">You must be logged in to add or edit Field Goals.</p>
<% end %>
