<div class="row">
	<div class="large-12 columns">
		<h1>Kicker Name - Bio</h1>
	</div>
</div>

<div class="row text-center">
	<div class="large-3 columns">
		<div class="panel">
			<p><strong>Total Points:</strong> </p>
			<h1><%= @total_points %></h1>
		</div>
	</div>
	<div class="large-3 columns">
		<div class="panel">
			<p><strong>Field Goal Long:</strong></p>
			<h1><%= @field_goal_long %></h1>
		</div>
	</div>
	<div class="large-3 columns">
		<div class="panel">
			<p><strong>Kickoff Long:</strong></p>
			<h1><%= @kickoff_long %></h1>
		</div>
	</div>
	<div class="large-3 columns">
		<div class="panel">
			<p><strong>Total Kickoff Yards:</strong></p>
			<h1><%= @total_kickoff_yards %></h1>
		</div>
	</div>
</div>
<div class="row">
	<div class="large-12 columns">
		<h1>Quick Add</h1>
		<p>This will show up only if you're logged in.</p>
	</div>
</div>
	
<div class="row">
	<div class="large-3 columns">
		<%= link_to "Add Kickoff", new_kickoff_path, :class => "button secondary expand" %>
	</div>
	<div class="large-3 columns">
		<%= link_to "Add Field Goal", new_field_goal_path, :class => "button secondary expand" %>
	</div>
	<div class="large-3 columns">
		<%= link_to "Add PAT", new_point_after_attempt_path, :class => "button secondary expand" %>
	</div>
	<div class="large-3 columns">
		<%= link_to "Add Punt", new_punt_path, :class => "button secondary expand" %>
	</div>
</div>




